@model MovieStore.Models.Dto.MoviePagesDto
@{
}

@if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

<div class="tbl-container">
    <h2>Movies</h2>

    @if(Model.MovieList != null)
    {
        <table>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>ReleaseYear</th>
            <th>Image</th>
            <th>Cast</th>
            <th>Director</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model.MovieList){
            <tr>
                <td>@item.Title</td>
                    <td>@item.GenreNames</td>
                    <td>@item.ReleaseYear</td>
                <td><img style="height:60px;width:80px" src="/Upload/@item.MovieImage"/></td>
                    <td>@item.Cast</td>
                    <td>@item.Director</td>
                    <td>
                    <a href="/Movie/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a href="/Movie/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
     
    </table>
    }
    
    <div class="input-container">
        <a href="/Movie/Add" class="btn btn-sec">Add</a>
    </div>
</div>
